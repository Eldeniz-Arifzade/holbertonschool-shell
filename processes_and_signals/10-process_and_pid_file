#!/usr/bin/env bash
#using multiple traps

# Create PID file - try /var/run first, fallback to current directory
echo $$ > /var/run/myscript.pid 2>/dev/null || echo $$ > myscript.pid

# Set up trap for SIGTERM and SIGQUIT
trap 'echo "I hate the kill command"; rm -f /var/run/myscript.pid myscript.pid; exit' SIGTERM SIGQUIT

# Set up trap for SIGINT
trap 'echo "Y U no love me?!"' SIGINT

# Infinite loop
while true
do
    echo "To infinity and beyond"
    sleep 2
done
