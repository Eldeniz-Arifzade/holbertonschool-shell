#!/usr/bin/env bash
#using multiple traps

# Create PID file with current script's PID
echo $$ > /var/run/myscript.pid

# Set up trap for SIGTERM and SIGQUIT - display message, delete PID file, and exit
trap 'echo "I hate the kill command"; rm -f /var/run/myscript.pid; exit' SIGTERM SIGQUIT

# Set up trap for SIGINT - display message only
trap 'echo "Y U no love me?!"' SIGINT

# Infinite loop
while true
do
    echo "To infinity and beyond"
    sleep 2
done
